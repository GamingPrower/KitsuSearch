{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "lib",
        "removeComments": false,
        "strict": true,
        "skipLibCheck": true,
        "strictNullChecks": true,
        "noImplicitThis": true,
        "inlineSourceMap": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}